src:
  (uid, password: "operator") => do
    uri: `ldap://localhost:1340/`
    dn: "uid=" + uid + ",ou=People,dc=activelogix,dc=com"
    attrs: ldapAuth(uri, dn, password)

    echo("#" + attrs["employeeNumber"])
    echo(attrs["employeeNumber"] == "0")

    // assume any other user is an operator
    return {}

  end
